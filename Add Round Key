module addroundkey(roundkey, clk, w, k, in);



reg [0:15]w [0:43];
reg [0:7]k [0:127];
input [0:127]in;

k[0]=in[0:7];
for(i=1;i<=15;i=i+1)
  begin
   k[i]=in[i*8:((i+1)*8)-1)];
  end
  
w[0]=k[0:3];
w[1]=k[4:7];
w[2]=k[8:11];
w[3]=k[12:15];



//one-byte left circular rotation on 4 byte word (w[(i*4)-1],

//byte substition from s box
RijndaelSBox inst_1(a,c);

//xor with round constant (RC[i],0x00,0x00,0x00)
//                      RC[1]=0x01
//                      RC[j]=0x02 X RC[j-1]



for(i=1;1<=10:i=i+1)                  //10 rounds for 128bits
  begin
    w[i*4]=w[(i*4)-4]^g(w[(i*4)-1]);
    w[(i*4)+1]=w[(i*4)]^w[(i*4)-3];
    w[(i*4)+2]=w[(i*4)+1]^w[(i*4)-2];
    w[(i*4)+3]=w[(i*4)+2]^w[(i*4)-1];
  end

end module



